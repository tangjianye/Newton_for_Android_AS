<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:angle="90" android:endColor="@color/btn_pressed_bg" android:startColor="@color/btn_pressed_bg" />

            <stroke android:width="0.2dip" android:color="@android:color/darker_gray" />

            <corners android:bottomLeftRadius="6dip" android:bottomRightRadius="6dip" />
        </shape></item>
    <item android:state_pressed="false"><shape>
            <gradient android:angle="90" android:endColor="@android:color/white" android:startColor="@android:color/white" />

            <stroke android:width="0.5dip" android:color="@android:color/darker_gray" />

            <corners android:bottomLeftRadius="6dip" android:bottomRightRadius="6dip" />
        </shape></item>

</selector>