<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:self="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <com.fpliu.newton.framework.ui.LoginEditTextEx
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="50dip"
        android:background="@drawable/my_edittext"
        android:hint="@string/account_name"
        android:paddingLeft="50dip"
        android:paddingRight="7dip"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="17sp"
        self:delBk="@drawable/ic_action_delete_pressed"
        self:titleBk="@drawable/ic_person_black" />

    <com.fpliu.newton.framework.ui.LoginEditTextEx
        android:id="@+id/userpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/my_edittext"
        android:digits="1234567890abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:hint="@string/login_password_enter"
        android:inputType="textPassword"
        android:paddingLeft="50dip"
        android:paddingRight="7dip"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="17sp"
        self:delBk="@drawable/ic_action_delete_pressed"
        self:titleBk="@drawable/ic_password" />

    <Button
        android:id="@+id/login_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="35dip"
        android:text="@string/login_bt"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:background="@drawable/state_list_rounded_rectangle" />

    <TextView
        android:id="@+id/forget_password_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="@string/forgot_password"
        android:layout_marginRight="10dip"
        android:textColor="@color/black" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_marginTop="60dip"
        android:layout_weight="1"
        android:gravity="bottom|center_vertical"
        android:stretchColumns="0, 1, 2" >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="3"
                android:gravity="center"
                android:paddingBottom="15dp"
                android:paddingTop="5dp"
                android:text="@string/third_party_account_login"
                android:textColor="@color/black"
                android:textSize="17sp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:paddingBottom="20dip" >

            <ImageView
                android:id="@+id/qq_login_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_qq_state" />

            <ImageView
                android:id="@+id/wechat_login_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_weixin_state" />

            <ImageView
                android:id="@+id/sina_weibo_login_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_weibo_state" />
        </TableRow>
    </TableLayout>

</LinearLayout>