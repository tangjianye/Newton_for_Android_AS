<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:self="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/bg_color" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="232dp"
        android:layout_margin="20dip"
        android:orientation="vertical" >
        
        <com.fpliu.newton.framework.ui.EditTextEx
            android:id="@+id/phone_num_user"
            style="@style/my_edittext_style"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:hint="@string/phone_number"
            android:minWidth="200dip"
            android:singleLine="true"
            android:textColor="#151515"
            android:inputType="number"
            android:enabled="false"
            android:textSize="16sp"/>
         <com.fpliu.newton.framework.ui.EditTextEx
            android:id="@+id/user_pass_user"
            
            style="@style/my_edittext_style"
            android:layout_width="fill_parent"
            android:layout_marginTop="10dip"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:hint="@string/login_password_enter"
            android:minWidth="200dip"
            android:singleLine="true"
            android:textColor="#151515"
            android:textSize="16sp"
            android:digits="1234567890abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            self:delBk="@drawable/ic_action_delete_pressed" />

         
        

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="20dip" >
	         <CheckBox
             android:id="@+id/checkBox_register"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:selectAllOnFocus="true"
             android:text="@string/register_agreed" 
             android:textColor="#000000"/>

	         <LinearLayout
	             android:id="@+id/ll_check_book"
	             android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:layout_marginTop="15dip"
	             android:orientation="vertical" >

	             <TextView
	                 android:id="@+id/check_book"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:text="@string/registration_agreement"
	                 android:textColor="#FF0000" />
	         </LinearLayout>

         </LinearLayout>

         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content" >
	         
             <ImageButton
                 android:id="@+id/user_register_bt2"
                 android:layout_width="wrap_content"
                 android:layout_height="35dip"
                 android:layout_alignParentLeft="true"
                 android:layout_alignParentRight="true"
                 android:layout_alignParentTop="true"
                 android:background="@drawable/btn_bg_change"
                 />

	        <TextView
	            android:id="@+id/textView5"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerHorizontal="true"
	            android:layout_centerVertical="true"
	            android:text="@string/register_btn"
	            android:textColor="@color/white"
	            android:textSize="17sp" />
             
         </RelativeLayout>
	      
    </LinearLayout>

</LinearLayout>