<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minWidth="280dip" >

    <LinearLayout
        android:id="@+id/custom_dialog_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="15dip"
        android:minWidth="280dip"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/custom_dialog_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center" />

        <LinearLayout
            android:id="@+id/custom_dialog_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/custom_dialog_message"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dip"
                android:paddingLeft="15dip"
                android:paddingRight="15dip"
                android:paddingTop="10dip" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/custom_dialog_button_panel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip" >

            <Button
                android:id="@+id/custom_dialog_positiveButton"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dip"
                android:layout_weight="1"
                android:singleLine="true" />

            <Button
                android:id="@+id/custom_dialog_neutralButton"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dip"
                android:layout_weight="1"
                android:singleLine="true" />

            <Button
                android:id="@+id/custom_dialog_negativeButton"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dip"
                android:layout_weight="1"
                android:singleLine="true" />
        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/custom_dialog_close_btn"
        android:layout_width="33dip"
        android:layout_height="35dip"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/ic_close"
        android:visibility="visible" />

</RelativeLayout>