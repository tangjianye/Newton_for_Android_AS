<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:self="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_color"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="232dp"
        android:layout_margin="20dip"
        android:orientation="vertical" >

        <com.fpliu.newton.framework.ui.EditTextEx
            android:id="@+id/phone_num_user"
            style="@style/my_edittext_style"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:hint="@string/phone_number"
            android:inputType="number"
            android:minWidth="200dip"
            android:paddingLeft="7dip"
            android:paddingRight="7dip"
            android:singleLine="true"
            android:textColor="#151515"
            android:textSize="16sp"
            self:delBk="@drawable/ic_action_delete_pressed" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_marginTop="10dip"
            android:orientation="horizontal" >

            <com.fpliu.newton.framework.ui.EditTextEx
                android:id="@+id/user_verification_user"
                style="@style/my_edittext_style"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:hint="@string/security_code"
                android:layout_weight="3"
                android:inputType="number"
                android:minWidth="200dip"
                android:paddingLeft="7dip"
                android:paddingRight="7dip"
                android:singleLine="true"
                android:textColor="#151515"
                android:textSize="16sp"
                self:delBk="@drawable/ic_action_delete_pressed" />

            <Button
                android:id="@+id/get_verification_code_bt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_bg_change"
                android:layout_weight="5"
                android:text="@string/get_security_code"
                android:textColor="@color/white" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dip" >

            <ImageButton
                android:id="@+id/user_register_bt2"
                android:layout_width="wrap_content"
            	android:layout_height="@dimen/button_height"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/btn_bg_change" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/next_steps"
                android:textColor="@color/white"
                android:textSize="17sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>